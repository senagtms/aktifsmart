<%- include('../partials/header'); %>

    <section id="main-content">
      <section class="wrapper">
      
        <!-- FORM VALIDATION -->
        <div class="row mt">
            <div class="col-lg-10">
              <h4><i class="fa fa-angle-right"></i> Sensör Ekleme</h4>   
                    <div class="form-panel sensorekle" >
                        <div class=" form">
                          <form class="cmxform form-horizontal style-form" id="commentForm" method="POST">
                            <div class="form-group ">
                                <label for="sensorAdi" class="control-label col-lg-2">Sensör Adı</label>
                                <div class="col-lg-6">
                                  <input class=" form-control"  name="sensorAdi" type="text" required />
                                </div>   </div>
                              <div class="form-group ">
                                <label for="sensorKodu" class="control-label col-lg-2">Sensor Kodu</label>
                                <div class="col-lg-6">
                                  <input class=" form-control"  name="sensorKodu" type="text" required />
                                </div>
                              </div>

                              <div class="form-group">
               
                                <label for="sensorTipID" class="control-label col-lg-2" name="sensorTipID">Sensör Tipi</label>
                                <div class="col-lg-6">
                                  <select class="form-control " name="sensorTipID">
                                    <option  id="bos"></option>
                                    <% for(var i = 0; i<data.length; i++) { %>
                                    <option value="<%=data[i].sensorTipID %>"><%= data[i].sensorTipAdi %></option>
                                    <% } %>
                                  </select>
                               
                                </div>
                           
                              </div>
                              <div class="form-group ">
                                <label for="sensorDurumu" class="control-label col-lg-2" name="sensorDurumu">Sensor Durumu</label>
                                <div class="col-lg-6">
                                  <select class="form-control sensorDurumu" name="sensorDurumu">
                    
                                    <option value="1">Aktif</option>
                                    <option value="0">Pasif</option>
                                
                                  </select>
                                </div>
                              </div>
                             
                                <div class="form-group">
                                  <div class="col-lg-offset-2 col-lg-10">
                                    <a href="/cihazlar/sensordetay/"><button  id="sensorEkle" class="btn btn-theme" type="submit">Kaydet</button></a>
                                    <a href="/cihazlar/sensordetay/"><button class="btn btn-theme04" type="button">Vazgeç</button></a>
                                  </div>
                                  </div>

                                 
                                </div>
                              </div>
                            
                  </form>
                </div>
              </div>
              <!-- /form-panel -->
            </div>
            <!-- /col-lg-12 -->
         
      </section>
      
    </section>

  
