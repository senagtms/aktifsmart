<%- include('./partials/header'); %>

    <section id="main-content">
        <section class="wrapper">
          <div class="row mt">
            <div class="col-md-12">
              <div class="content-panel">
                
                <table class="table table-striped table-advance table-hover">
                  <h4><i class="fa fa-angle-right"></i> Kullanıcılar</h4>
                  <button href="/kullanicilar/kullaniciEkle" type="submit" class="btn btn-info ekle"><i class="fa fa-plus"></i><a href="/kullanicilar/kullaniciEkle"> Kullanıcı Ekle</a></button>
  
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Kullanıcı Adı</th>
                      <th> Kullanıcı Soyadı</th>
                      <th>Kullanıcı Telefon</th>
                      <th>Kullanıcı Mail</th>
                      <th>Kullanıcı Şifre</th>
                      <th>Firma</th>
                      <th>Kullanıcı Durum</th>
                      <th>Kullanıcı Pozisyon</th>

                     
                      
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i = 0; i < data.length; i++) { %>

                    <tr>
                      <td><%= data[i].kullaniciID %></td>
                      <td class="hidden-phone"><%= data[i].kullaniciAdi %></td>
                      <td><%= data[i].kullaniciSoyadi %></td>
                      <td><%= data[i].kullaniciTel %></td>
                      <td><%= data[i].kullaniciMail %></td>
                      <td><%= data[i].kullaniciSifre %></td>
                      <td><%= data[i].kullaniciFirma %></td>
                      <%if(data[i].kullaniciDurumu==1){%><td>Aktif</td><%} else{ %><td>Pasif</td><%}%>
                      <td><%= data[i].kullaniciPozisyon %></td>
                      <td>
                        
                        <a href="/kullanicilar/kullaniciDuzenle/<%= data[i].kullaniciID %>"  class="btn btn-primary edit-btt btn-xs" data-toggle="tooltip"><i class="fa fa-pencil"> Düzenle</i></a>
                        <button class="btn btn-danger delete-btt btn-xs"><i class="fa fa-trash-o ">  Sil</i></button></td>
                     
                    </tr>
                      <% } %>
                     

                  </tbody>
                </table>
              </div>
              <!-- /content-panel -->
            </div>
            <!-- /col-md-12 -->
          </div>
            
             
                
        </section>
        
      </section>

      <%- include('./partials/footer'); %>